<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br>
      <h3>Edit Your Listing</h3>

      <form method="POST" action="/listings/<%= EditList._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input
            name="listing[title]"
            value="<%= EditList.title %>"
            class="form-control"
            placeholder="Enter title"
            required
          />
          <div class="invalid-feedback">Please enter your title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description:</label>
          <textarea
            name="listing[description]"
            rows="5"
            class="form-control"
            placeholder="Enter description"
            required
          ><%= EditList.description %></textarea>
          <div class="invalid-feedback">Please enter a description</div>
        </div>
        <div class="mb-3">
          <label  >Orginal image:</label>
          <div>
          <img src="<%= OriginalImage%>" style="width: 250px; height: 250px; object-fit: cover" >
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image:</label>
          <input
            name="listing[image]"
            class="form-control"
            type="file" />
        </div>
        
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price:</label>
            <input
              name="listing[price]"
              value="<%= EditList.price %>"
              type="number"
              class="form-control"
              placeholder="Enter price"
              required
            />
            <div class="invalid-feedback">Please enter a price</div>
          </div>

          <div class="col-md-8 mb-3">
            <label for="country" class="form-label">Country:</label>
            <input
              name="listing[country]"
              value="<%= EditList.country %>"
              class="form-control"
              placeholder="Enter country"
              required
            />
            <div class="invalid-feedback">Please enter a Country</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location:</label>
          <input
            name="listing[location]"
            value="<%= EditList.location %>"
            class="form-control"
            placeholder="Enter location"
            required
          />
          <div class="invalid-feedback">Please enter Location</div>
        </div>

        <button class="btn btn-success">Update</button>
        <br><br>
      </form>
    </div>
  </div>

  <script src="/js/script.js"></script>
</body>
